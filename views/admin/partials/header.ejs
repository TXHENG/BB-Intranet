<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./../../styles.ejs') -%>
    <%- include('./../sidebar-style.ejs') -%>
    <%- include('./../../scripts.ejs') -%>
    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
            $('#sidebarCollapse').click(function(){
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });


    </script>
</head>
<body>
    <nav class="navbar fixed-top navbar-light bg-dark">
        <button type="button" id="sidebarCollapse" class="btn btn-danger">
            <i class="fa fa-align-justify"></i>
        </button>
        <h3 class="text-light">Admin Site</h3>
        <img src="/resources/img/logo.png" alt="BB Intranet" id="logo">
    </nav>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header text-light text-center">
                <img src="/resources/img/avatar/m.png" alt="avatar" class="avatar rounded-circle d-block">
                <h4 class="d-block ml-auto mr-auto"><%= (locals.admin)?admin.name:'-' %></h4>
            </div>
            <ul class="list-unstyled">
                <li class="<%= (locals.path1)?(path1 === 'home' ? 'active' : ''):'' %>"><a href="/admin/home"><i class="fa fa-home"></i> Home</a>
                <li class="<%= (locals.path1)?(path1 === 'members' ? 'active' : ''):'' %>"><a href="/admin/members"><i class="fa fa-users"></i> Members list</a></li>
                <li class="<%= (locals.path1)?(path1 === 'badges' ? 'active' : ''):'' %>"><a href="/admin/badges"><i class="fa fa-certificate"></i> Badge list</a></li>
                <li class="<%= (locals.path1)?(path1 === 'activities' ? 'active' : ''):'' %>"><a href="/admin/activities"><i class="fa fa-cross"></i> Activities</a></li>
                <li class="<%= (locals.path1)?(path1 === 'something else' ? 'active' : ''):'' %>">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-home"></i> Home</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li><a href="/">Home</a></li>
                        <li><a href="/">Home</a></li>
                    </ul>
                </li>
                <li><a href="/admin/sign-out"><i class="fa fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </nav>
        <div id="content">